<h1>Register</h1>
<%= form_for @user do |f| %>
  <%= f.text_field :firstname, placeholder: "First name" %>
  <%= f.text_field :lastname, placeholder: "Last name" %><br><br>
  <%= f.text_field :email, placeholder: "Email" %><br><br>
  <%= f.text_field :username, placeholder: "Username" %><br><br>
  <%= f.password_field :password, placeholder: "Password" %><br><br>
  <%= f.submit "Create account" %>
<% end %>