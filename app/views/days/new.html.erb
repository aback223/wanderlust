<ol class="breadcrumb text-left">
  <li class="breadcrumb-item active"><%= link_to @itinerary.trip_title, itinerary_path(@itinerary) %></li>
  <li class="breadcrumb-item in-active">Plan a Day</li>
</ol>

<div class="form-container text-center">
  <h2>New Day</h2>
  <h5>Add a title and date for a specific day during your trip</h5>
  <%= form_for @day, url: itinerary_days_path(@itinerary), method: :post do |f| %>
    <%= render partial: 'form', locals: { f: f } %>
  <% end %>
</div>