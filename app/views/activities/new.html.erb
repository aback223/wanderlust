<ol class="breadcrumb text-left">
  <li class="breadcrumb-item active"><%= link_to @activity.day.itinerary.trip_title, itinerary_path(@activity.day.itinerary) %></li>
  <li class="breadcrumb-item in-active">Add Activity for <%= @activity.day.title %> - <%= show_date(@activity.day.date)%></li>
</ol>

<div class="form-container text-center">
  <h2>Add Activity</h2><br>
  <%= form_for ([@day, @activity]) do |f| %>
    <%= render partial: 'form', locals: { f: f, submit_text: "Save"} %>
  <% end %>
</div>