<div class="form-row">
  <div class="form-group-lg col-xl-6">
    <%= f.text_field :trip_title, placeholder: "Add A Title", class: "form-control" %><br />
  </div>
</div>
<div class="form-row form-group-lg">
  <div class="col">
    <h4><%= f.label :datestart, "Date Start" %>:</h4>
    <%= f.date_field :datestart, class: "form-control" %><br>
  </div>
  <div class="col">
    <h4><%= f.label :dateend, "Date End" %>:</h4>
    <%= f.date_field :dateend, class: "form-control" %>
  </div>
</div>
<br>
<div class="actions">
  <%= f.submit "Save", class: 'btn btn-lg btn-add' %>
</div>

<br>
<% if !@errors.nil? %>
  <ul>
    <div class="error">
        <label><%= pluralize(@errors.count, "error") %> prohibited this pin from
        being saved:</label>
        <%= image_errors_if_exists %>
        <% @errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul> 
    </div>  
<% end %>